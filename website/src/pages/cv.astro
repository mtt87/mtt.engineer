---
import "../styles/cv.css";
import resume from "../resume.json";
import { format } from "date-fns";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mattia Asti - CV</title>
  </head>
  <body>
    <div class="mx-auto flex max-w-4xl flex-col gap-4 px-4 py-3 sm:px-0">
      <div class="flex flex-col justify-between gap-4 sm:flex-row">
        <div
          class="flex flex-col items-center gap-1 sm:flex-row sm:items-baseline sm:gap-3"
        >
          <h1 class="text-3xl font-semibold">
            {resume.basics.name}
          </h1>
          <h2 class="text-lg text-gray-500">{resume.basics.label}</h2>
        </div>
        <div class="flex items-center justify-center gap-3">
          <a
            aria-label="link to linkedin mtt.engineer website"
            class="flex items-center gap-1"
            href="https://mtt.engineer"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width={26}
              height={26}
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M16.36 14c.08-.66.14-1.32.14-2s-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2m-5.15 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95a8.03 8.03 0 0 1-4.33 3.56M14.34 14H9.66c-.1-.66-.16-1.32-.16-2s.06-1.35.16-2h4.68c.09.65.16 1.32.16 2s-.07 1.34-.16 2M12 19.96c-.83-1.2-1.5-2.53-1.91-3.96h3.82c-.41 1.43-1.08 2.76-1.91 3.96M8 8H5.08A7.92 7.92 0 0 1 9.4 4.44C8.8 5.55 8.35 6.75 8 8m-2.92 8H8c.35 1.25.8 2.45 1.4 3.56A8 8 0 0 1 5.08 16m-.82-2C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2s.06 1.34.14 2M12 4.03c.83 1.2 1.5 2.54 1.91 3.97h-3.82c.41-1.43 1.08-2.77 1.91-3.97M18.92 8h-2.95a15.7 15.7 0 0 0-1.38-3.56c1.84.63 3.37 1.9 4.33 3.56M12 2C6.47 2 2 6.5 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2"
              ></path></svg
            >
          </a>
          <a
            class="flex items-center gap-1"
            aria-label="link to linkedin mattiaasti profile"
            href="https://www.linkedin.com/in/mattiaasti/"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width={26}
              height={26}
              viewBox="0 0 256 256"
              ><path
                fill="#0a66c2"
                d="M218.123 218.127h-37.931v-59.403c0-14.165-.253-32.4-19.728-32.4c-19.756 0-22.779 15.434-22.779 31.369v60.43h-37.93V95.967h36.413v16.694h.51a39.91 39.91 0 0 1 35.928-19.733c38.445 0 45.533 25.288 45.533 58.186zM56.955 79.27c-12.157.002-22.014-9.852-22.016-22.009s9.851-22.014 22.008-22.016c12.157-.003 22.014 9.851 22.016 22.008A22.013 22.013 0 0 1 56.955 79.27m18.966 138.858H37.95V95.967h37.97zM237.033.018H18.89C8.58-.098.125 8.161-.001 18.471v219.053c.122 10.315 8.576 18.582 18.89 18.474h218.144c10.336.128 18.823-8.139 18.966-18.474V18.454c-.147-10.33-8.635-18.588-18.966-18.453"
              ></path></svg
            >
          </a>
          <a
            aria-label="link to linkedin mtt87 github profile"
            class="flex items-center gap-1"
            href="https://github.com/mtt87"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width={26}
              height={26}
              viewBox="0 0 24 24"
              ><path
                fill="#1f2328"
                d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
              ></path></svg
            >
          </a>
          <a
            aria-label="mail to mattia.asti@gmail.com"
            class="flex items-center gap-1"
            href="mailto:mattia.asti@gmail.com"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width={26}
              height={26}
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2zm-2 0l-8 5l-8-5zm0 12H4V8l8 5l8-5z"
              ></path></svg
            ></a
          >
        </div>
      </div>
      <div>
        <p>{resume.basics.summary}</p>
      </div>
      <hr />
      <div class="flex flex-col gap-4">
        {
          resume.work.map((work) => (
            <div class="">
              <h3 class="mb-1 text-lg font-semibold">
                <span>{work.position} -</span> <span>{work.name}</span>
                <span class="text-sm font-normal text-gray-500">
                  {format(new Date(work.startDate), "MMM yyy")},
                  {work.endDate !== undefined
                    ? format(new Date(work.endDate), "MMM yyy")
                    : "current"}
                </span>
              </h3>
              <p class="mb-2">{work.summary}</p>
              <ul class="list-inside list-disc pl-8">
                {work.highlights?.map((h) => (
                  <li>{h}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </body>
</html>
